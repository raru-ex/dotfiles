{
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      // custom config path
      // "args": ["-c", "/path/to/your/config.yaml"],
      "filetypes": ["vim", "markdown", "yaml"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "metals.scalafmtConfigPath": "project/.scalafmt.conf",
  "metals.superMethodLensesEnabled": true,
  "metals.enable": true,
  "metals.statusBarEnabled": true,
  "metals.showInferredType": true,
  "metals.showImplicitArguments": true,
  "codeLens.enable": true,
  "suggest.timeout": 5000,
  "python.jediEnabled": false,
  "typescript.implementationsCodeLens.enable": false,
  "typescript.referencesCodeLens.enable": false,
  "javascript.implementationsCodeLens.enable": false,
  "javascript.referencesCodeLens.enable": false

}
