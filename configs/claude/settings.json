{
  "env": {
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "true",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_TELEMETRY": "true"
  },
  "permissions": {
    "allow": [
      "Bash(awk *)",
      "Bash(bat *)",
      "Bash(brew info *)",
      "Bash(brew list *)",
      "Bash(brew upgrade *)",
      "Bash(bun *)",
      "Bash(cargo *)",
      "Bash(cat *)",
      "Bash(cd *)",
      "Bash(chmod *)",
      "Bash(cp *)",
      "Bash(curl *)",
      "Bash(date *)",
      "Bash(deno *)",
      "Bash(docker *)",
      "Bash(echo *)",
      "Bash(env)",
      "Bash(eza *)",
      "Bash(fd *)",
      "Bash(find *)",
      "Bash(task *)",
      "Bash(gh api *)",
      "Bash(gh log *)",
      "Bash(gh issue *)",
      "Bash(gh pr *)",
      "Bash(gh run *)",
      "Bash(gh checks *)",
      "Bash(git add *)",
      "Bash(git -C *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git fetch *)",
      "Bash(git log *)",
      "Bash(git merge *)",
      "Bash(git pull)",
      "Bash(git pull *)",
      "Bash(git push)",
      "Bash(git push *)",
      "Bash(git rebase *)",
      "Bash(git reset *)",
      "Bash(git show *)",
      "Bash(git stash *)",
      "Bash(git status *)",
      "Bash(git tag *)",
      "Bash(git rm *)",
      "Bash(go *)",
      "Bash(GOWORK=off go build *)",
      "Bash(golangci-lint *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(jq *)",
      "Bash(kill *)",
      "Bash(killall *)",
      "Bash(ln *)",
      "Bash(ls *)",
      "Bash(make *)",
      "Bash(mkdir *)",
      "Bash(mise *)",
      "Bash(mv *)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(nvim *)",
      "Bash(pgrep *)",
      "Bash(pkill *)",
      "Bash(pnpm *)",
      "Bash(prettier *)",
      "Bash(printenv *)",
      "Bash(printf *)",
      "Bash(ps *)",
      "Bash(pwd)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(readlink *)",
      "Bash(rg *)",
      "Bash(sed *)",
      "Bash(sleep *)",
      "Bash(sort *)",
      "Bash(tail *)",
      "Bash(tar *)",
      "Bash(tee *)",
      "Bash(tmux *)",
      "Bash(touch *)",
      "Bash(tr *)",
      "Bash(tree *)",
      "Bash(uv *)",
      "Bash(wc *)",
      "Bash(wget *)",
      "Bash(which *)",
      "Bash(whoami)",
      "Bash(xargs *)",
      "Bash(yarn *)",
      "Bash(zoxide *)",
      "Bash(npx tsc *)",
      "Bash(~/.claude/scripts/*)",
      "Write(~/.claude/tmp/pr-body.md)",
      "Write(~/.claude/tmp/commit-message.md)",
      "Glob(**)",
      "Grep(**)",
      "Read(**)",
      "Read(~/.claude/tmp/*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(chmod 777 *)",
      "Bash(dd *)",
      "Bash(fdisk *)",
      "Bash(git push --force-with-lease origin main)",
      "Bash(git push -f origin main)",
      "Bash(mkfs *)",
      "Bash(rm *)",
      "Bash(sudo *)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/id_rsa)",
      "Read(**/id_ed25519)",
      "Read(**/id_ecdsa)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Edit(**/id_rsa)",
      "Edit(**/id_ed25519)",
      "Edit(**/id_ecdsa)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Write(**/id_rsa)",
      "Write(**/id_ed25519)",
      "Write(**/id_ecdsa)"
    ]
  },
  "language": "japanese",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/check-command-policy.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/opt/homebrew/bin/deno run --allow-read --allow-write --allow-env=HOME,TMPDIR,TMUX_PANE,TMUX --allow-run $HOME/.claude/scripts/approve-piped-commands.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/opt/homebrew/bin/deno run --allow-read --allow-write --allow-env=HOME,TMPDIR,TMUX_PANE,TMUX --allow-run $HOME/.claude/scripts/claude-notify.ts send Hero"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
